@model CreateAccountDto
@{
    ViewData["Title"] = "Yeni Hesap Oluştur";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="ki-outline ki-wallet fs-2 text-primary me-2"></i>
            Yeni Hesap Oluştur
        </h3>
    </div>
    
    <form asp-action="Create" method="post" class="form">
        @Html.AntiForgeryToken()
        
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <!-- Account Name -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Hesap Adı</label>
                <div class="col-lg-9">
                    <input asp-for="Name" class="form-control form-control-lg form-control-solid" placeholder="Örn: Banka Hesabı, Nakit" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Initial Balance -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Başlangıç Bakiyesi</label>
                <div class="col-lg-9">
                    <div class="input-group input-group-lg input-group-solid">
                        <input asp-for="InitialBalance" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <span class="input-group-text">₺</span>
                    </div>
                    <span asp-validation-for="InitialBalance" class="text-danger"></span>
                    <div class="form-text">Hesabın başlangıç bakiyesini girin</div>
                </div>
            </div>
            
            <!-- Currency -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Para Birimi</label>
                <div class="col-lg-9">
                    <select asp-for="Currency" class="form-select form-select-lg form-select-solid">
                        <option value="TRY">₺ Türk Lirası (TRY)</option>
                        <option value="USD">$ Amerikan Doları (USD)</option>
                        <option value="EUR">€ Euro (EUR)</option>
                        <option value="GBP">£ İngiliz Sterlini (GBP)</option>
                    </select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Description -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label fw-semibold fs-6">Açıklama</label>
                <div class="col-lg-9">
                    <textarea asp-for="Description" class="form-control form-control-lg form-control-solid" rows="3" placeholder="Hesap hakkında açıklama (opsiyonel)"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/admin/accounts" class="btn btn-light btn-active-light-primary me-2">
                <i class="ki-outline ki-cross fs-2"></i>
                İptal
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="ki-outline ki-check fs-2"></i>
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
