@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="ki-outline ki-check-circle fs-2 me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="ki-outline ki-cross-circle fs-2 me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="ki-outline ki-lock fs-2 text-primary me-2"></i>
            Şifre Değiştir
        </h3>
    </div>
    
    <form asp-action="ChangePassword" method="post" class="form">
        @Html.AntiForgeryToken()
        
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="alert alert-info d-flex align-items-center mb-10">
                <i class="ki-outline ki-information-5 fs-2 me-3"></i>
                <div>
                    <strong>Güvenlik İpucu:</strong> Şifreniz en az 6 karakter uzunluğunda olmalı ve büyük harf, küçük harf ve rakam içermelidir.
                </div>
            </div>
            
            <!-- Current Password -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Mevcut Şifre</label>
                <div class="col-lg-9">
                    <div class="position-relative">
                        <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg form-control-solid" placeholder="Mevcut şifrenizi girin" id="currentPassword" />
                        <button type="button" class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" onclick="togglePassword('currentPassword')">
                            <i class="ki-outline ki-eye fs-2"></i>
                        </button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
            </div>
            
            <!-- New Password -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Yeni Şifre</label>
                <div class="col-lg-9">
                    <div class="position-relative">
                        <input asp-for="NewPassword" type="password" class="form-control form-control-lg form-control-solid" placeholder="Yeni şifrenizi girin" id="newPassword" />
                        <button type="button" class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" onclick="togglePassword('newPassword')">
                            <i class="ki-outline ki-eye fs-2"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <div class="form-text">En az 6 karakter, büyük harf, küçük harf ve rakam içermeli</div>
                </div>
            </div>
            
            <!-- Confirm Password -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Yeni Şifre (Tekrar)</label>
                <div class="col-lg-9">
                    <div class="position-relative">
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg form-control-solid" placeholder="Yeni şifrenizi tekrar girin" id="confirmPassword" />
                        <button type="button" class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" onclick="togglePassword('confirmPassword')">
                            <i class="ki-outline ki-eye fs-2"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/admin/profile" class="btn btn-light btn-active-light-primary me-2">
                <i class="ki-outline ki-cross fs-2"></i>
                İptal
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="ki-outline ki-shield-tick fs-2"></i>
                Şifreyi Değiştir
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = event.currentTarget.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('ki-eye');
                icon.classList.add('ki-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('ki-eye-slash');
                icon.classList.add('ki-eye');
            }
        }
    </script>
}
