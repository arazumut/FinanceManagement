@model CreateTransactionDto
@using FinanceManagement.Domain.Enums
@{
    ViewData["Title"] = "Yeni İşlem Oluştur";
    var accounts = ViewBag.Accounts as List<AccountDto> ?? new List<AccountDto>();
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="ki-outline ki-arrow-up-down fs-2 text-primary me-2"></i>
            Yeni İşlem Oluştur
        </h3>
    </div>
    
    <form asp-action="Create" method="post" class="form">
        @Html.AntiForgeryToken()
        
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <!-- Transaction Type -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">İşlem Tipi</label>
                <div class="col-lg-9">
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="Type" id="typeIncome" value="@((int)TransactionType.Income)" />
                        <label class="btn btn-outline btn-outline-success btn-active-success" for="typeIncome">
                            <i class="ki-outline ki-arrow-up fs-2"></i> Gelir
                        </label>
                        
                        <input type="radio" class="btn-check" name="Type" id="typeExpense" value="@((int)TransactionType.Expense)" checked />
                        <label class="btn btn-outline btn-outline-danger btn-active-danger" for="typeExpense">
                            <i class="ki-outline ki-arrow-down fs-2"></i> Gider
                        </label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Amount -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Tutar</label>
                <div class="col-lg-9">
                    <div class="input-group input-group-lg input-group-solid">
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <span class="input-group-text">₺</span>
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Description -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Açıklama</label>
                <div class="col-lg-9">
                    <input asp-for="Description" class="form-control form-control-lg form-control-solid" placeholder="İşlem açıklaması" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Category -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Kategori</label>
                <div class="col-lg-9">
                    <select asp-for="CategoryId" class="form-select form-select-lg form-select-solid">
                        <option value="">Kategori Seçiniz...</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name (@(category.Type == TransactionType.Income ? "Gelir" : "Gider"))</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Account -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Hesap</label>
                <div class="col-lg-9">
                    <select asp-for="AccountId" class="form-select form-select-lg form-select-solid">
                        <option value="">Hesap Seçiniz...</option>
                        @foreach (var account in accounts)
                        {
                            <option value="@account.Id">@account.Name (@account.Balance.ToString("N2") ₺)</option>
                        }
                    </select>
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Date -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Tarih</label>
                <div class="col-lg-9">
                    <input asp-for="Date" type="datetime-local" class="form-control form-control-lg form-control-solid" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Notes -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label fw-semibold fs-6">Notlar</label>
                <div class="col-lg-9">
                    <textarea asp-for="Notes" class="form-control form-control-lg form-control-solid" rows="3" placeholder="Ek notlar (opsiyonel)"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/admin/transactions" class="btn btn-light btn-active-light-primary me-2">
                <i class="ki-outline ki-cross fs-2"></i>
                İptal
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="ki-outline ki-check fs-2"></i>
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
