@model UpdateTransactionDto
@{
    ViewData["Title"] = "İşlem Düzenle";
    var accounts = ViewBag.Accounts as List<AccountDto> ?? new List<AccountDto>();
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="ki-outline ki-pencil fs-2 text-primary me-2"></i>
            İşlem Düzenle
        </h3>
    </div>
    
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <!-- Amount -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Tutar</label>
                <div class="col-lg-9">
                    <div class="input-group input-group-lg input-group-solid">
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
                        <span class="input-group-text">₺</span>
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Description -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Açıklama</label>
                <div class="col-lg-9">
                    <input asp-for="Description" class="form-control form-control-lg form-control-solid" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Category -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Kategori</label>
                <div class="col-lg-9">
                    <select asp-for="CategoryId" class="form-select form-select-lg form-select-solid">
                        <option value="">Kategori Seçiniz...</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Account -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Hesap</label>
                <div class="col-lg-9">
                    <select asp-for="AccountId" class="form-select form-select-lg form-select-solid">
                        <option value="">Hesap Seçiniz...</option>
                        @foreach (var account in accounts)
                        {
                            <option value="@account.Id">@account.Name</option>
                        }
                    </select>
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Date -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label required fw-semibold fs-6">Tarih</label>
                <div class="col-lg-9">
                    <input asp-for="Date" type="datetime-local" class="form-control form-control-lg form-control-solid" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Notes -->
            <div class="row mb-6">
                <label class="col-lg-3 col-form-label fw-semibold fs-6">Notlar</label>
                <div class="col-lg-9">
                    <textarea asp-for="Notes" class="form-control form-control-lg form-control-solid" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a href="/admin/transactions" class="btn btn-light btn-active-light-primary me-2">
                <i class="ki-outline ki-cross fs-2"></i>
                İptal
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="ki-outline ki-check fs-2"></i>
                Güncelle
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
