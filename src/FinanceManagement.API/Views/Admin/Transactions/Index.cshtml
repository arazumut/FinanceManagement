@model PaginatedList<TransactionDto>
@using FinanceManagement.Domain.Enums
@{
    ViewData["Title"] = "İşlemler";
    var filter = ViewBag.Filter as TransactionFilterDto;
    var accounts = ViewBag.Accounts as List<AccountDto> ?? new List<AccountDto>();
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
}

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="ki-outline ki-check-circle fs-2 me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="ki-outline ki-cross-circle fs-2 me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Card -->
<div class="card mb-5">
    <div class="card-body">
        <form method="get" action="/admin/transactions" class="row g-3">
            <div class="col-md-2">
                <label class="form-label fw-semibold">İşlem Tipi</label>
                <select name="Type" class="form-select">
                    <option value="">Tümü</option>
                    <option value="@((int)TransactionType.Income)" @(filter?.Type == TransactionType.Income ? "selected" : "")>Gelir</option>
                    <option value="@((int)TransactionType.Expense)" @(filter?.Type == TransactionType.Expense ? "selected" : "")>Gider</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Kategori</label>
                <select name="CategoryId" class="form-select">
                    <option value="">Tümü</option>
                    @foreach (var cat in categories)
                    {
                        <option value="@cat.Id" @(filter?.CategoryId == cat.Id ? "selected" : "")>@cat.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Hesap</label>
                <select name="AccountId" class="form-select">
                    <option value="">Tümü</option>
                    @foreach (var acc in accounts)
                    {
                        <option value="@acc.Id" @(filter?.AccountId == acc.Id ? "selected" : "")>@acc.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Başlangıç</label>
                <input type="date" name="StartDate" class="form-control" value="@filter?.StartDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">Bitiş</label>
                <input type="date" name="EndDate" class="form-control" value="@filter?.EndDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="ki-outline ki-filter fs-2"></i> Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Transactions Card -->
<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <h3 class="fw-bold m-0">
                @if (Model != null)
                {
                    <span class="text-gray-600">Toplam @Model.TotalCount işlem</span>
                }
            </h3>
        </div>
        <div class="card-toolbar">
            <a href="/admin/transactions/create" class="btn btn-primary">
                <i class="ki-outline ki-plus fs-2"></i>
                Yeni İşlem
            </a>
        </div>
    </div>
    
    <div class="card-body pt-0">
        @if (Model == null || !Model.Items.Any())
        {
            <div class="text-center py-10">
                <i class="ki-outline ki-arrow-up-down fs-5x text-gray-400 mb-5"></i>
                <h3 class="text-gray-600">Henüz işlem eklenmemiş</h3>
                <p class="text-gray-500">Yeni bir işlem eklemek için yukarıdaki butonu kullanın</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5">
                    <thead>
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-200px">Açıklama</th>
                            <th class="min-w-100px">Tip</th>
                            <th class="min-w-125px">Kategori</th>
                            <th class="min-w-125px">Hesap</th>
                            <th class="min-w-125px">Tarih</th>
                            <th class="min-w-100px text-end">Tutar</th>
                            <th class="text-end min-w-100px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 fw-semibold">
                        @foreach (var transaction in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-45px me-5">
                                            <span class="symbol-label bg-light-@(transaction.Type == TransactionType.Income ? "success" : "danger")">
                                                <i class="ki-outline @(string.IsNullOrEmpty(transaction.CategoryIcon) ? "ki-category" : transaction.CategoryIcon) fs-2 text-@(transaction.Type == TransactionType.Income ? "success" : "danger")"></i>
                                            </span>
                                        </div>
                                        <div class="d-flex justify-content-start flex-column">
                                            <span class="text-gray-900 fw-bold fs-6">@transaction.Description</span>
                                            @if (!string.IsNullOrEmpty(transaction.Notes))
                                            {
                                                <span class="text-muted fw-semibold d-block fs-7">@transaction.Notes</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (transaction.Type == TransactionType.Income)
                                    {
                                        <span class="badge badge-light-success">
                                            <i class="ki-outline ki-arrow-up fs-4"></i> Gelir
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-light-danger">
                                            <i class="ki-outline ki-arrow-down fs-4"></i> Gider
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-light-primary">@transaction.CategoryName</span>
                                </td>
                                <td>
                                    <span class="text-gray-900 fw-bold">@transaction.AccountName</span>
                                </td>
                                <td>
                                    <span class="text-gray-900 fw-bold d-block">@transaction.Date.ToString("dd.MM.yyyy")</span>
                                    <span class="text-muted fw-semibold d-block fs-7">@transaction.Date.ToString("HH:mm")</span>
                                </td>
                                <td class="text-end">
                                    <span class="text-@(transaction.Type == TransactionType.Income ? "success" : "danger") fw-bold fs-6">
                                        @(transaction.Type == TransactionType.Income ? "+" : "-")@transaction.Amount.ToString("N2") ₺
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a href="/admin/transactions/edit/@transaction.Id" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                        <i class="ki-outline ki-pencil fs-2"></i>
                                    </a>
                                    <button type="button" class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm" 
                                            onclick="deleteTransaction('@transaction.Id', '@transaction.Description')">
                                        <i class="ki-outline ki-trash fs-2"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-5">
                    <div class="text-gray-600">
                        Sayfa @Model.PageNumber / @Model.TotalPages
                    </div>
                    <ul class="pagination">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&pageSize=@filter?.PageSize">Önceki</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="?pageNumber=@i&pageSize=@filter?.PageSize">@i</a>
                            </li>
                        }
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&pageSize=@filter?.PageSize">Sonraki</a>
                        </li>
                    </ul>
                </div>
            }
        }
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function deleteTransaction(id, description) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: `"${description}" işlemini silmek istediğinizden emin misiniz?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.getElementById('deleteForm');
                    form.action = `/admin/transactions/delete/${id}`;
                    form.submit();
                }
            });
        }
    </script>
}
